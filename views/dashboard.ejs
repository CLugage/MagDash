<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

<div class="container mx-auto p-5">
    <h1 class="text-3xl font-bold">Your Containers</h1>

    <!-- Button to show the form for creating a new container -->
    <button id="createContainerBtn" class="bg-green-500 text-white py-2 px-4 rounded mt-4">Create New Container</button>

    <!-- Container creation form (hidden by default) -->
    <form id="createContainerForm" class="mt-4 bg-white p-4 border border-gray-300" style="display: none;" action="/containers" method="POST">
        <h2 class="text-2xl mb-4">Create New Container</h2>

        <!-- Container Name Input -->
        <div class="mb-4">
            <label for="name" class="block text-sm font-bold mb-2">Container Name</label>
            <input type="text" id="name" name="name" class="w-full p-2 border border-gray-300 rounded" required>
        </div>

        <!-- OS Template Dropdown -->
        <div class="mb-4">
            <label for="template" class="block text-sm font-bold mb-2">OS Template</label>
            <select id="template" name="template" class="w-full p-2 border border-gray-300 rounded">
                <% templates.forEach(template => { %>
                    <option value="<%= template %>"><%= template %></option>
                <% }); %>
            </select>
        </div>

        <!-- Plan Dropdown -->
        <div class="mb-4">
            <label for="plan" class="block text-sm font-bold mb-2">Select Plan</label>
            <select id="plan" name="plan" class="w-full p-2 border border-gray-300 rounded" required>
                <option value="" disabled selected>Select a plan</option>
                <option value="basic">Basic - 1 core, 512 MB RAM, 8 GB Disk</option>
                <option value="standard">Standard - 2 cores, 1 GB RAM, 20 GB Disk</option>
                <option value="premium">Premium - 4 cores, 2 GB RAM, 50 GB Disk</option>
            </select>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded">Create Container</button>
    </form>

    <table class="min-w-full mt-4 bg-white border border-gray-200">
        <thead>
            <tr>
                <th class="py-2 px-4 border-b">VMID</th>
                <th class="py-2 px-4 border-b">Name</th>
                <th class="py-2 px-4 border-b">Status</th>
                <th class="py-2 px-4 border-b">Password</th>
                <th class="py-2 px-4 border-b">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% containers.forEach(container => { %>
                <tr>
                    <td class="py-2 px-4 border-b"><%= container.vmid %></td>
                    <td class="py-2 px-4 border-b"><%= container.name %></td>
                    <td class="py-2 px-4 border-b"><%= container.status %></td>
                    <td class="py-2 px-4 border-b"><%= container.password %></td>
                    <td class="py-2 px-4 border-b">
                        <form action="/containers/start/<%= container.vmid %>" method="POST" class="inline">
                            <button type="submit" class="bg-blue-500 text-white py-1 px-3 rounded">Start</button>
                        </form>
                        <form action="/containers/stop/<%= container.vmid %>" method="POST" class="inline">
                            <button type="submit" class="bg-red-500 text-white py-1 px-3 rounded">Stop</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<script>
    document.getElementById('createContainerBtn').addEventListener('click', function () {
        document.getElementById('createContainerForm').style.display = 'block';
    });
</script>

</body>
</html>
